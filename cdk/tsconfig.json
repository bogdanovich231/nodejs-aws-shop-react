{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["es2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./"  
  },
  "include": [
    "bin/**/*.ts",  
    "lib/**/*.ts",  
    "test/**/*.ts"  
  ]
}